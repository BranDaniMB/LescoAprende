<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhraseDetails">

    <Button
        android:id="@+id/tittle"
        android:layout_width="413dp"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:background="@color/blue_primary"
        android:text="@string/phrase_details"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/subtitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/subtitle"
        android:layout_width="412dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:background="@color/blue_tertiary"
        android:text="@string/kitchen_phrase_1"
        android:textAlignment="center"
        android:textSize="13sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064" />

    <TextView
        android:id="@+id/gesture_visuals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18sp"
        android:text="@string/gesture_visuals"
        android:textAlignment="center"
        android:textColor="@color/blue_primary"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/gesture_visuals_video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <VideoView
        android:id="@+id/gesture_visuals_video"
        android:layout_width="339dp"
        android:layout_height="229dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/gesture_details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/gesture_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:text="@string/gesture_details"
        android:textAlignment="center"
        android:textColor="@color/blue_primary"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/gesture_details_video"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <VideoView
        android:id="@+id/gesture_details_video"
        android:layout_width="337dp"
        android:layout_height="224dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>